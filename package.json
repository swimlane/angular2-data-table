{
  "name": "angular2-data-table",
  "version": "0.1.13",
  "description": "angular2-data-table is a Angular2 component for presenting large and complex data.",
  "main": "lib/main.js",
  "typings": "lib/main.d.ts",
  "scripts": {
    "install:global": "npm install concurrently npm-check",
    "check": "npm-check --skip-unused",
    "test": "npm run lint && karma start",
    "lint": "./node_modules/tslint/bin/tslint ./src/{,**/}*.ts",
    "version": "npm run build",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "clean": "npm run clean:lib & npm run clean:release",
    "clean:lib": "rimraf lib",
    "clean:release": "./node_modules/rimraf/bin.js release",
    "build": "npm run clean & concurrently \"npm run build:ts\" \"npm run build:sass\"",
    "build:ts": "tsc",
    "build:sass": "node-sass -o lib/ src/",
    "build:css": "postcss --use autoprefixer lib/*.css -d lib/",
    "watch": "concurrently \"npm run watch:ts\" \"npm run watch:build\" \"npm run watch:sass\"",
    "watch:ts": "tsc --watch",
    "watch:sass": "npm run build:sass && node-sass -o lib/ -w src/",
    "watch:build": "watchify lib/app.js -o lib/bundle.js -v",
    "start": "npm run watch && npm run watch:build & npm run start:server",
    "start:server": "lite-server -c bs-config.js",
    "release": "NODE_ENV=production npm run clean && npm run build && npm run release:css && npm run release:bundle && npm run release:minify",
    "release:css": "node-sass -o release/ src/themes && node-sass -o release/ src/components",
    "release:minify": "uglifyjs release/angular2-data-table.js --source-map release/angular2-data-table.min.js.map --source-map-url release/angular2-data-table.js.map --compress --mangle --screw-ie8 --output release/angular2-data-table.min.js",
    "release:bundle": "browserify lib/main.js -d -s angular2DataTable --no-bundle-external | exorcist release/angular2-data-table.map > release/angular2-data-table.js",
    "deploy": "npm run deploy:github",
    "deploy:github": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swimlane/angular2-data-table.git"
  },
  "keywords": [
    "angularjs",
    "angular",
    "javascript"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/swimlane/angular2-data-table/issues"
  },
  "homepage": "https://github.com/swimlane/angular2-data-table#readme",
  "devDependencies": {
    "browserify": "^13.0.1",
    "concurrent": "^0.3.2",
    "exorcist": "^0.4.0",
    "istanbul-instrumenter-loader": "^0.2.0",
    "jspm": "^0.17.0-beta.22",
    "karma": "^1.1.1",
    "karma-chrome-launcher": "^1.0.1",
    "karma-coverage": "^1.1.0",
    "karma-jasmine": "^1.0.2",
    "karma-mocha-reporter": "^2.0.0",
    "karma-sourcemap-loader": "^0.3.7",
    "lite-server": "^2.2.0",
    "ts-helpers": "^1.1.1",
    "node-sass": "^3.7.0",
    "protractor": "^4.0.0",
    "remap-istanbul": "^0.6.3",
    "rimraf": "^2.5.2",
    "tsify": "^1.0.1",
    "tslint": "^3.12.0-dev.2",
    "typescript": "^2.0.0",
    "uglify-js": "^2.6.4",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "@angular/common": "^2.0.0-rc.4",
    "@angular/compiler": "^2.0.0-rc.4",
    "@angular/core": "^2.0.0-rc.4",
    "@angular/platform-browser": "^2.0.0-rc.4",
    "@angular/platform-browser-dynamic": "^2.0.0-rc.4",
    "es6-shim": "^0.35.1",
    "rxjs": "^5.0.0-beta.6",
    "zone.js": "^0.6.12"
  }
}
